CREATE TABLE status
(
idStatus serial PRIMARY KEY,
description varchar(50)
)

CREATE TABLE users
(
idUsers serial PRIMARY KEY,
userName varchar(50) NOT NULL,
passwords varchar(50) NOT NULL,
startedDate date NOT NULL,
typeUser varchar(30) NOT NULL,
idStatus integer REFERENCES status(idStatus)
)

CREATE TABLE employees
(
idEmployees serial PRIMARY KEY,
firstName varchar(50) NOT NULL,
lastName varchar(50) NOT NULL,
dni varchar(8) NOT NULL,
gender varchar(1) NOT NULL,
birthDate date,
hireDate date,
salary numeric(9,2),
phoneNumber varchar(9),
idStatus integer REFERENCES status(idStatus)
)

CREATE TABLE legalCustomer
(
idLegalCustomer serial PRIMARY KEY,
companyName varchar(50) NOT NULL,
address varchar(100) NOT NULL,
ruc varchar(12) NOT NULL,
contactName varchar(100) NOT NULL,
numberPhone varchar(9) NOT NULL,
idStatus integer REFERENCES status(idStatus)
)

INSERT INTO public.status(description)
    VALUES ('Activo');

INSERT INTO public.status(description)
    VALUES ('Inactivo');
    
